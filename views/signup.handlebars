<div class="sign-up-cont text-white signup-wrapper">
  <div class="form-box">

    <h2>Signup</h2>
    <form class="form signup-form">
      <div class="form-group input-box">
        <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
        <label for="name">name:</label>
        <input class="form-input" name="name" type="text" id="name-signup" />
      </div>
      <div class="form-group input-box">
        <span class="icon"><ion-icon name="mail"></ion-icon></span>
        <input
          class="form-input"
          type="text"
          name="username"
          id="username-signup"
        />
        <label for="username">username:</label>
      </div>
      <div class="form-group input-box">
        <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
        <label for="password">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group input-box">
        <span class="icon"><ion-icon name="medical-outline"></ion-icon></span>
        <label for="clinic">clinic:</label>
        <input class="form-input" type="text" id="clinic-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<div
  class="modal fade"
  id="errorModal"
  tabindex="-1"
  aria-labelledby="errorModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Unable to create account.
          Please try again.</h5>

        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Close</button>

        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>
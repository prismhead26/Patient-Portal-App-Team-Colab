<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<style>
    .fc .fc-toolbar-title, .fc .fc-timegrid-axis-cushion, .fc .fc-timegrid-slot-label-cushion  { 
        color: aliceblue !important;
    }
</style>

<button class="btn btn-primary float-right" data-bs-toggle="modal" data-bs-target="#myCalModal">Add Appointment</button>

  {{#if appointments.length}}
  <div class="container row">
    <h3 class="text-light text-center">List of current appointments:</h3>

    {{#each appointments as |appointment|}}
    <div class="row mb-2 justify-content-between d-flex">
      <div class="col-md-6">
        <h4><a  href="/api/appointments/{{id}}" class="link-warning">{{appointment.title}}
      </a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

<div class="modal fade" id="myCalModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="myCalModalLabel">New Appointment Information</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="" class="form">
          <label for="new-appointment-day">Appointment day:</label>
          <input class="form-input" type="date" id="new-appointment-day" name="new-appointment-day"><br>
          <label for="new-appointment-time">Appointment Time:</label>
          <input class="form-input" type="time" id="new-appointment-time" name="new-appointment-time"><br>
          <label for="new-appointment-title">Title:</label>
          <input class="form-input" type="text" id="new-appointment-title" name="new-appointment-title"><br>
          <label for="new-patient-patient_id">Patient ID:</label>
          <input class="form-input" type="number" id="new-patient-patient_id" name="new-patient-patient_id"><br>
        <div class="modal-footer">
            <button class="btn btn-primary" id="new-appointment">Submit Appointment</button>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div id="calendar" class="calendar" data-user="{{stringifyData this}}"></div>

<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="/js/calendar.js"></script>
<script src="/js/dashboard.js"></script>
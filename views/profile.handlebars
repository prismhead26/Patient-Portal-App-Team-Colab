<link rel="stylesheet" href="/css/profile.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<div class="container text-white">
  <div class="col">
    <div class="row doctor">
      <div class="row mb-5">
        <h1 class="welcome">Welcome Back,</h1><br/>
        <h2>Dr. {{name}}</h2>
      </div>
      <div class="row">
        <div class="current col col-10">
          <h4 class="current-text">Current Patients:</h4>
        </div>
        <div class="add-btton col col-2">
          <button class="btn btn-primary add-patient-btn" data-bs-toggle="modal" data-bs-target="#myModal">Add Patient</button>
        </div>
      </div>


      <div class="row patients-cont-big">
        <div class="patients-list">
            {{#each patients}}
            {{> patient-details}}
            {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="myModalLabel">New Patient Information</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="" class="form">
          <div class="patient-personal-info">
            <label for="patient-name" class="text">Patient Name:</label>
            <input class="form-input" type="text" id="new-patient-name" placeholder="Ex: John Smith"><br>
          </div>
          <div class="patient-personal-info">
            <label for="patient-birthday" class="text">Birthdate:</label>
            <input class="form-input" type="text" id="new-patient-birthday" placeholder="Ex: MM/DD/YYY"><br>
          </div>
          <div class="patient-personal-info">
            <label for="patient-address" class="text">Address:</label>
            <input class="form-input" type="text" id="new-patient-address" placeholder="Ex: Street, City, State, Zip"><br>
          </div>
          <div class="patient-personal-info">
            <label for="patient-phone" class="text">Phone:</label>
            <input class="form-input" type="text"id="new-patient-phone" placeholder="Ex: 816-000-0000"><br>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary sub" id="new-patient">Submit Patient</button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="errorModal"
  tabindex="-1"
  aria-labelledby="errorModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Please try again.</h5>

      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>

      </div>
    </div>
  </div>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<section class="doctor-info">
    <h1 class="text-light text-center fw-bold">Dr.{{name}}</h1>
    <div class="text-center mt-5 m-5">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Add Patient</button>
    </div>
  {{#each patients}}
    {{> patient-details}}
  {{/each}}
</section>


<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="myModalLabel">New Patient Information</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="">
          <label for="patient-name">Patient Name:</label>
          <input type="text" id="new-patient-name"><br>
          <label for="patient-birthday">Birthdate:</label>
          <input type="text" id="new-patient-birthday"><br>
          <label for="patient-address">Address:</label>
          <input type="text" id="new-patient-address"><br>
          <label for="patient-phone">Phone:</label>
          <input type="text"id="new-patient-phone"><br>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" id="new-patient">Submit Patient</button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="/js/profile.js"></script>
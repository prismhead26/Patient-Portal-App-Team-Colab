<div class="login-cont">
  <div class="row wrapper">
  <div class="col-md-6 text-white form-box">
    <h2>Login</h2>
    <form class="form login-form text-white">
      <div class="form-group input-box">
        <span class="icon"><ion-icon name="mail"></ion-icon></span>
        <input class="form-input" type="text" id="username-login" />
        <label for="username-login">Username</label>
      </div>
      <div class="form-group input-box">
        <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
        <input class="form-input" type="password" id="password-login" />
        <label for="password-login">Password</label>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
      <p class="new-user">New User? <a href="/signup">Signup</a></p>
    </form>
  </div>
<script src="/js/login.js"></script>
</div>
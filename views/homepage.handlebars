
  <header class="container d-flex flex-column align-items-center">
    <h1 class="text-light">Welcome to the TrackNHeal portal!</h1>
    <p class="text-light">A Safe, Secure, and Convenient way to access your health!</p>
      {{#unless logged_in}}
        <p class="mt-3 text-warning"><strong>Tip:</strong> to continue, open the login page.</p>
      {{/unless}}
  </header>
  <div class="container-sm align-items-center">
    <img src="/images/health1.jpeg" class="img-fluid img-thumbnail mx-auto d-block" style="width: 288px;" alt="Health Image">
  </div>
  <section class="container m-auto">
    <h1 class="text-light text-center my-3">Our Registered Physicians:</h1>

    <div class="row justify-content-center text-center d-flex">
      {{#each doctors}}
        <p class="text-light col-6">Dr. {{name}} ({{clinic}})</p><br />
      {{/each}}
    </div>

  </section>